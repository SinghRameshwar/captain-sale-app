<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="2dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:text="Lead No"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/grey"
                android:text="Date"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serial_no"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:text="5000098"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/grey"
                android:text="01-02-2022"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:textColor="@color/grey"
                android:text="Owner's Name"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_weight="1.5"
                android:gravity="right"
                android:textColor="@color/grey"
                android:text="Lead status"
                android:textSize="12dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="match_parent"
                android:layout_weight=".5"
                android:textColor="@color/grey"
                android:text="Owner Name"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pstatus2"
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:gravity="right"
                android:textColor="@color/primary"
                android:text="Open"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:text="Dealer/Sub-dealer name"
            android:textSize="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dealer_name"
            android:layout_width="match_parent"
            android:textColor="@color/grey"
            android:text="test sub dealer 2"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:text="Lead Initiate"
            android:textSize="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sales_name"
            android:layout_width="match_parent"
            android:textColor="@color/grey"
            android:text="sales man's name"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>