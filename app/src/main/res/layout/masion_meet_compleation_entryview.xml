<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my_actionbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1.9"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/screenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:text="Mason Meet Completion"
                    android:textColor="@color/white" />
                <!--style="?android:textAppearanceSmall"-->

            </RelativeLayout>

            <TextView
                android:id="@+id/saveData"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18dp"
                android:padding="10dp"
                android:text="Save"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Meet Type"
            android:textColor="@color/custom1"
            android:textSize="12dp" />

        <Spinner
            android:id="@+id/v_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screenTitle"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/base"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"/>

        <Spinner
            android:id="@+id/Spinnerview"
            android:layout_width="match_parent"
            android:textColor="@color/grey"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lable1"
            android:layout_width="match_parent"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/grey"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/custom1"
            android:textSize="12dp"
            android:text="Date of mason meet"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dateTxt1"
            android:layout_width="match_parent"
            android:text="DD-MM-YYYY"
            android:tag="0"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/custom1"
            android:textSize="12dp"
            android:text="Actual Number of Participation"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/actual_numPEdit"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text=""
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/edit_txt_roundcorner"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/actualPnum_lay"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/custom1"
            android:textSize="12dp"
            android:text="Actual Expense"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/actualExpance"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text=""
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:background="@drawable/edit_txt_roundcorner"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/custom1"
            android:textSize="12dp"
            android:text="Bill Image"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bill_img1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/bill_img2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/bill_img3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/bill_img4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_margin="5dp"
                android:layout_height="70dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/custom1"
            android:textSize="12dp"
            android:text="Mason meet Image"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/msonMeet_img1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_margin="5dp"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/msonMeet_img2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_margin="5dp"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/msonMeet_img3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_margin="5dp"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/msonMeet_img4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:tag="0"
                android:src="@drawable/ic_default"
                android:layout_height="70dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/iron"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>