<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_actionbar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/screenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ChangePass"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:textColor="@color/white"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                />
            <!--style="?android:textAppearanceSmall"-->
            <TextView
                android:id="@+id/right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:layout_below="@+id/screenTitle"
                android:layout_centerHorizontal="true"
                android:text="Right Title"
                android:textColor="#C5C5C5"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="12sp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_actionbar_toolbar"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/logo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/login_bg_gradient"
                android:padding="@dimen/padding_medium"
                >
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome User"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_marginBottom="4dp"
                    />
                    <EditText android:id="@+id/currentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:hint="Current password"
                        android:textColorHint="@color/white"
                        />

                    <EditText
                        android:id="@+id/newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:hint="New password"
                        android:textColorHint="@color/white"
                        />
                    <EditText
                        android:id="@+id/newPasswordConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:hint="Confirm password"
                        android:textColorHint="@color/white"
                        />
                <!-- <Button
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:text="@string/ChangePass"
                     android:textColor="@color/white"
                     android:background="@drawable/rounded_button"
                     android:layout_marginTop="10dp"
                     android:padding="3dp"
                     android:onClick="onPasswordChangeClick"
                     />-->
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:layout_gravity="center"
                    android:onClick="onPasswordChangeClick"
                    android:background="@drawable/rounded_button"
                    android:text="@string/ChangePass"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

